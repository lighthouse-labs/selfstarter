<div class="gray_background" id='share_container'>
  <div class="wrapper center" id="congrats">
    <h2>
      <%= I18n.t :reserved, scope: [reservation] %> <%= Settings.product_description %>!
    </h2>
    <p><%= I18n.t :backer_num_1, scope: [reservation] %> <%= Settings.primary_stat_verb %> <%= I18n.t :backer_num_2, scope: [reservation] %> <span id="backer_number"><%= number_with_delimiter Order.backers, :delimiter => "," %></span><%= I18n.t :backer_num_3, scope: [reservation] %> <%= I18n.t :product_name %><%= I18n.t :backer_num_4, scope: [reservation] %></p>
    <br />
    <br />
    <div id="share" class="clearfix">
      <div id='pin_button_container'>
        <%= pin_it_button %>
      </div>
      <div id='tweet_button_container'>
        <%= tweet_button %>
      </div>
      <div id='facebook_button_container'>
        <%= like_button(450, true) %>
      </div>
    </div>
     <div id="order_id"><%= I18n.t :res_id_1, scope: [:reservation] %> <%= @order.uuid %><%= I18n.t :res_id_2, scope: [:reservation] %></div>
  </div>
</div>

<%= render 'preorder/share/twitter_js' %>
<%= render 'preorder/share/facebook_js' %>
